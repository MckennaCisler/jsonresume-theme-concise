{{#resume.basics}}
	<section id="basics">
		<div id="basics-header-container">
			<div class="contact">
				<div class="summary-section" hidden>
					{{#if email}}
						<div class="email">
							{{email}}
						</div>
					{{else}}
						{{#if phone}}
							<div class="phone">
								{{phone}}
							</div>
						{{else}}
							{{#if website}}
								<div class="website">
									{{website}}
								</div>
							{{/if}}
						{{/if}}
					{{/if}}
				</div>
				<div class="full-section">
					{{#if website}}
					<div class="website">
						{{website}}
					</div>
					{{/if}}
					{{#if email}}
					<div class="email">
						{{email}}
					</div>
					{{/if}}
					{{#if phone}}
					<div class="phone">
						{{phone}}
					</div>
					{{/if}}
				</div>
			</div>
			{{#location}}
			<section id="location">
				<div class="summary-section" hidden>
					{{#if countryCode}}
					<div class="countryCode">
						{{countryCode}}
						{{#if region}}
							<span class="region">
								({{region}})
							</span>
						{{/if}}
					</div>
					{{/if}}
				</div>
				<div class="full-section">
					{{#if address}}
					<div class="address">
						{{address}}
					</div>
					{{/if}}
					{{#if postalCode}}
					<div class="postalCode">
						{{postalCode}}
					</div>
					{{/if}}
					{{#if city}}
					<div class="city">
						{{city}}
					</div>
					{{/if}}
					{{#if countryCode}}
					<div class="countryCode">
						{{countryCode}}
					</div>
					{{/if}}
					{{#if region}}
					<div class="region">
						{{region}}
					</div>
					{{/if}}
				</div>
			</section>
			{{/location}}
		</div>
		{{#if summary}}
		<div class="summary">
			<p><em>{{summary}}</em></p>
		</div>
		{{/if}}
		{{#if profiles.length}}
		<section id="profiles">
			{{#each profiles}}
			<div class="item">
				{{#if username}}
					{{#if network}}
					<strong class="network">
						{{network}}
					</strong>
					{{/if}}
					<div class="username">
						<a href="{{url}}">{{username}}</a>
					</div>
				{{else}}
					{{#if network}}
					<strong class="network">
						<a href="{{url}}">{{network}}</a>
					</strong>
					{{/if}}
				{{/if}}
			</div>
			{{/each}}
		</section>
		{{/if}}
	</section>
{{/resume.basics}}
